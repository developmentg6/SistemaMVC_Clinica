
@{
    ViewBag.Title = "TelaPrincipal";
    Layout = "~/Views/Shared/_LayoutLogado.cshtml";
}

<div class="text-center telaSistema">
    @if (Session["nivel"].ToString() == "1")
    {
        <h2 class="txtBemVindo boxMenu boxBemVindo">Bem-vindo(a), ADMINISTRADOR!</h2>
    }
    else
    {
        <h2 class="txtBemVindo boxMenu boxBemVindo">Bem-vindo(a), @Session["usuario"].ToString()</h2>
    }

    <div class="row">
        <div class="col-sm-6 col-md-4">
            <div class="boxMenu text-center">
                <h3>Clientes</h3>
                @Html.ActionLink("Cadastrar", "Cadastrar", "Cliente", null, new { @class = "btn btnMenu" })
                @Html.ActionLink("Consultar", "Index", "Cliente", null, new { @class = "btn btnMenu" })
            </div>
        </div>

        @if (Session["nivel"].ToString() == "1")
        {
            <div class="col-sm-6 col-md-4">
                <div class="boxMenu text-center">
                    <h3>Funcionários</h3>
                    @Html.ActionLink("Cadastrar", "Cadastrar", "Funcionario", null, new { @class = "btn btnMenu" })
                    @Html.ActionLink("Consultar", "Index", "Funcionario", null, new { @class = "btn btnMenu" })
                </div>
            </div>
        }

        <div class="col-sm-6 col-md-4">
            <div class="boxMenu text-center">
                <h3>Procedimentos</h3>
                @Html.ActionLink("Cadastrar", "Cadastrar", "Procedimento", null, new { @class = "btn btnMenu" })
                @Html.ActionLink("Consultar", "Index", "Procedimento", null, new { @class = "btn btnMenu" })
            </div>
        </div>

        <div class="col-sm-6 col-md-4">
            <div class="boxMenu text-center">
                <h3>Avaliação</h3>
                @Html.ActionLink("Cadastrar", "Cadastrar", "Avaliacao", null, new { @class = "btn btnMenu" })
                @Html.ActionLink("Consultar", "Index", "Avaliacao", null, new { @class = "btn btnMenu" })
            </div>
        </div>

        <div class="col-sm-6 col-md-4">
            <div class="boxMenu text-center">
                <h3>Sessões</h3>
                @Html.ActionLink("Cadastrar", "Cadastrar", "Sessao", null, new { @class = "btn btnMenu" })
                @Html.ActionLink("Consultar", "Index", "Sessao", null, new { @class = "btn btnMenu" })
            </div>
        </div>

        <div class="col-sm-6 col-md-4">
            <div class="boxMenu text-center">
                <h3>Agenda</h3>
                @Html.ActionLink("Consultar", "Index", "Agenda", null, new { @class = "btn btnMenu" })
                @Html.ActionLink("Relatório", "Relatorio", "Agenda", null, new { @class = "btn btnMenu" })
            </div>
        </div>

    </div>

</div>